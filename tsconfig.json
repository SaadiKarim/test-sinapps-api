{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@config/*" : ["src/config/*"],
      "@parking/*" : ["src/parking/*"],
      "@casl/*" : ["src/casl/*"],
      "@auth/*" : ["src/auth/*"],
      "@users/*" : ["src/users/*"],
    }
  }
}
